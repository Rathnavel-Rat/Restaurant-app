<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorError"

    tools:context=".Activity.RegistrationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:text="Step a  HEAD and \n full the STOMACH"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <EditText

            android:id="@+id/et_Rname"
            android:layout_width="374dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:maxLength="30"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:hint="Name" />

        <EditText

            android:id="@+id/et_REmail"
            android:layout_width="375dp"
            android:layout_height="36dp"
            android:maxLines="1"
            android:maxLength="50"
            android:layout_below="@+id/et_Rname"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:hint="Email" />

        <EditText

            android:id="@+id/et_RMobile"
            android:layout_width="377dp"
            android:layout_height="47dp"
            android:layout_below="@+id/et_REmail"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="number"
            android:drawableLeft="@drawable/ic_smobile"
            android:hint="MobileNumber" />

        <EditText

            android:id="@+id/et_RDeliveryAdd"
            android:layout_width="375dp"
            android:layout_height="44dp"
            android:layout_below="@+id/et_RMobile"
            android:layout_margin="10dp"

            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:hint="Delivery Address" />

        <EditText

            android:id="@+id/et_RPassword"
            android:layout_width="377dp"
            android:layout_height="45dp"
            android:layout_below="@+id/et_RDeliveryAdd"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Password(MIN. 4 characters"
            android:inputType="textPassword"
            android:maxLines="1" />

        <EditText

            android:id="@+id/et_RConPassword"
            android:layout_width="377dp"
            android:layout_height="41dp"
            android:layout_below="@+id/et_RPassword"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="confrim Password"
            android:inputType="textPassword"
            android:maxLines="1" />

        <Button
            android:id="@+id/bt_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A82CBD"
            android:text="REGISTER"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>